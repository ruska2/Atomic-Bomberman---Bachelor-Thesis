<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.robo.atomicbomberman.LoginActivity">



            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/bomber"
                android:id="@+id/imageView3"
                android:layout_marginTop="114dp"
                android:layout_below="@+id/button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:visibility="invisible" />

            <TextView
                android:text="AtomicBomberman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/headerView"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:fontFamily="casual"
                android:textSize="24sp"
                android:textAlignment="center"
                tools:textColor="@color/wallet_link_text_light"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text=""
                android:background="@drawable/edittextborder"
                android:hint="Nickame"
                android:ems="10"
                android:layout_marginTop="57dp"
                android:id="@+id/editText"
                android:selectAllOnFocus="false"
                android:padding="10dp"
                android:layout_below="@+id/headerView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <!--detail>
            <TextView
                android:text="Nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/viewName"
                android:textColor="#372c24"
                android:layout_below="@+id/headerView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="34dp" />
            </detail-->
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:layout_marginTop="53dp"
                android:id="@+id/logpassword"
                android:background="@drawable/edittextborder"
                android:hint="Password"
                android:padding="10dp"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
            <!--detail>
            <TextView
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:id="@+id/passwordView"
                android:layout_below="@+id/editText"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="29dp" />
            </detail-->
            <Button
                android:text="Registration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reg_btn"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/button"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/cast_intro_overlay_button_background_color"
                android:textColor="@color/cast_expanded_controller_background_color" />

            <Button
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:id="@+id/button"

                android:elevation="0dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:background="@color/cast_expanded_controller_background_color"
                android:layout_below="@+id/logpassword" />

</RelativeLayout>
